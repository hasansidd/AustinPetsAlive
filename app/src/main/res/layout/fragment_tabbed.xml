<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/NameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/energyLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Energy Level"
                android:textAppearance="@style/InfoFont"/>

            <TextView
                android:id="@+id/childLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Child Level"
                android:textAppearance="@style/InfoFont" />

            <TextView
                android:id="@+id/catLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Cat Level"
                android:textAppearance="@style/InfoFont" />

            <TextView
                android:id="@+id/dogLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Dog Level"
                android:textAppearance="@style/InfoFont" />

            <TextView
                android:id="@+id/homeAlone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/Image"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Home Alone Level"
                android:textAppearance="@style/InfoFont" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
